                                            </Canvas>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>

                        <Button Height="50"
                                Width="50"
                                Margin="5"
                                Name="SelectButton"
                                Click="MethodButtonClick"
                                ToolTip="{DynamicResource WriteBoardString6}"
                                Style="{DynamicResource ChromelessButtonStyle}"
                                HorizontalAlignment="Center">
