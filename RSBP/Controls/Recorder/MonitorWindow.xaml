<Window x:Class="RSBP.Controls.Recorder.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RSBP"
        Background="Transparent"
        AllowsTransparency="True"
        WindowState="Normal"
        WindowStyle="None" ShowInTaskbar="False">
    <Grid>
        <local:OutlinedTextBlock VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 FontSize="100"
                                 Margin="0,0,0,8"
                                 FontWeight="Bold"
                                 Text="Record Monitor"
                                 Fill="#FFFDFDFD"
                                 x:Name="outLineText" />
    </Grid>
</Window>